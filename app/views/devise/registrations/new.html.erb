<%= render "shared/header2" %>

<div class='sign-up'>
  <div class='form'>
    <div class='form-text'>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class='str'><b>メンバー登録</b></div>
      <div class="user-form-index">
      <div class='user-error-str'>
        <%= render 'shared/error_messages', model: f.object %>
      </div>
        <div class="field">
          <%= f.label :"ニックネーム" %><br />
          <%= f.text_field :nickname, class: "user-nickname" %>
       </div>

       <div class="field">
         <%= f.label :"メールアドレス" %><br />
         <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "user-email" %>
       </div>

       <div class="field">
         <%= f.label :"パスワード(6文字以上)" %>
         <% if @minimum_password_length %>
         <% end %><br />
       <%= f.password_field :password, autocomplete: "new-password", class: "user-password" %>
       </div>

       <div class="field">
        <%= f.label :"パスワード(確認)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "登録", class:"user-send-btn" %>
        <%= link_to '戻る', root_path, class:"user-back-btn" %>
      </div>
    </div>
    <% end %>
    </div>
  </div>
</div>

<%= render "shared/footer"%>