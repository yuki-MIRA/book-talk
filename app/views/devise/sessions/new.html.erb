<%= render "shared/header2" %>

<div class='sign-up'>
  <div class='form'>
    <div class='form-text'>
       <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
       <div class='str'><b>メンバー情報入力</b></div>
         <div class='login-flash-message'>
           <%= flash[:notice] %>
           <%= flash[:alert] %>
         </div>
         <div class="field">
           <%= f.label :"メールアドレス" %><br />
           <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
         </div>
         <div class="field">
           <%= f.label :"パスワード" %><br />
           <%= f.password_field :password, autocomplete: "current-password" %>
         </div>
         <div class="actions">
           <%= f.submit "ログイン" %>
         </div>
      <% end %>
    </div>
  </div>
</div>
